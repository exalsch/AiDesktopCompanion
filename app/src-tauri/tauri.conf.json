{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AiDesktopCompanion",
  "version": "0.1.0",
  "identifier": "dev.local.aidesktopcompanion",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "AiDesktopCompanion",
        "label": "main",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'", "asset:"],
        "connect-src": ["ipc:", "http://ipc.localhost", "https://api.openai.com"],
        "img-src": ["'self'", "asset:", "http://asset.localhost", "blob:", "data:"],
        "media-src": ["'self'", "asset:", "http://asset.localhost", "blob:", "data:"],
        "font-src": ["'self'", "data:"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "object-src": ["'none'"],
        "frame-ancestors": ["'none'"],
        "base-uri": ["'none'"],
        "form-action": ["'self'"],
        "worker-src": ["'self'", "blob:"]
      },
      "devCsp": {
        "default-src": ["'self'", "asset:"],
        "connect-src": ["ipc:", "http://ipc.localhost", "https://api.openai.com", "http://localhost:5173", "ws://localhost:5173"],
        "img-src": ["'self'", "asset:", "http://asset.localhost", "blob:", "data:"],
        "media-src": ["'self'", "asset:", "http://asset.localhost", "blob:", "data:"],
        "font-src": ["'self'", "data:"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "object-src": ["'none'"],
        "frame-ancestors": ["'none'"],
        "base-uri": ["'none'"],
        "form-action": ["'self'"],
        "worker-src": ["'self'", "blob:"]
      },
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$RESOURCE/**",
          "$APP/**",
          "$TEMP/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
