{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AiDesktopCompanion",
  "version": "0.1.2",
  "identifier": "de.schick-nest.aidesktopcompanion",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "AiDesktopCompanion",
        "label": "main",
        "width": 800,
        "height": 600,
        "minWidth": 760,
        "minHeight": 740,
        "resizable": true,
        "fullscreen": false,
        "browserExtensionsEnabled": false,
        "allowLinkPreview": false,
        "windowEffects": {
          "effects": ["mica"]
        }
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'", "asset:", "http://asset.localhost"],
        "script-src": ["'self'", "'wasm-unsafe-eval'"],
        "script-src-elem": ["'self'", "'wasm-unsafe-eval'"],
        "connect-src": ["'self'", "ipc:", "http://ipc.localhost", "https://api.openai.com", "asset:", "http://asset.localhost"],
        "img-src": ["'self'", "asset:", "http://asset.localhost", "blob:", "data:"],
        "media-src": ["'self'", "asset:", "http://asset.localhost", "blob:", "data:"],
        "font-src": ["'self'", "data:"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "object-src": ["'none'"],
        "frame-ancestors": ["'none'"],
        "base-uri": ["'none'"],
        "form-action": ["'self'"],
        "worker-src": ["'self'", "blob:"]
      },
      "devCsp": {
        "default-src": ["'self'", "asset:"],
        "script-src": ["'self'", "'wasm-unsafe-eval'"],
        "connect-src": ["'self'", "ipc:", "http://ipc.localhost", "https://api.openai.com", "http://localhost:5173", "ws://localhost:5173", "asset:", "http://asset.localhost"],
        "img-src": ["'self'", "asset:", "http://asset.localhost", "blob:", "data:"],
        "media-src": ["'self'", "asset:", "http://asset.localhost", "blob:", "data:"],
        "font-src": ["'self'", "data:"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "object-src": ["'none'"],
        "frame-ancestors": ["'none'"],
        "base-uri": ["'none'"],
        "form-action": ["'self'"],
        "worker-src": ["'self'", "blob:"]
      },
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$RESOURCE/**",
          "$ASSET/**",
          "$APP/**",
          "$TEMP/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",    
    "windows": {
      "wix": {
        "language": ["en-US", "de-DE"]
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
